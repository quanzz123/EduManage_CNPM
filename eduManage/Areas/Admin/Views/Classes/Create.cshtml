@model eduManage.Models.TblClass
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Thêm mới lớp học</h3> <a asp-action="Index" class="btn btn-primary float-right veiwbutton">Trở về</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tên lớp học</label>
                                <input class="form-control" type="text"  asp-for="ClassName">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Giảng viên</label>
                                <select class="form-control" id="sel1" name="sellist1" asp-for="TeacherId" asp-items="ViewBag.TeacherList">
                                    
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4" style="display: none">
                            <div class="form-group">
                                <label>Room Type</label>
                                <select class="form-control" id="sel2" name="sellist1">
                                    <option>Select</option>
                                    <option>Single</option>
                                    <option>Double</option>
                                    <option>Quad</option>
                                    <option>King</option>
                                    <option>Suite</option>
                                    <option>Villa</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4" style="display:none">
                            <div class="form-group">
                                <label>Total Members</label>
                                <select class="form-control" id="sel3" name="sellist1">
                                    <option>Select</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Lịch học</label>
                                <div class="time-icon">
                                    <input type="text" class="form-control" id="datetimepicker3" asp-for="Schedule">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>ngày bắt đầu</label>
                                <div class="cal-icon">
                                    <input type="text" class="form-control datetimepicker" asp-for="StartDate">
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Ngày kết thúc</label>
                                <div class="cal-icon">
                                    <input type="text" class="form-control datetimepicker" asp-for="EndDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4" style="display:none">
                            <div class="form-group">
                                <label>Depature Date</label>
                                <div class="cal-icon">
                                    <input type="text" class="form-control datetimepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="text" class="form-control" id="usr" asp-for="MaxStudents">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Tên môn</label>
                                <input type="text" class="form-control" id="usr1" asp-for="Subject">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Ảnh đại diện</label>
                                <div class="custom-file mb-3">
                                    <input type="file" class="custom-file-input" id="customFile" name="filename">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" rows="5" id="comment" name="text" asp-for="Description"></textarea>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group text-left">
                                @* <label>Mô tả</label> *@
                                <button type="submit" class="btn btn-primary buttonedit">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>