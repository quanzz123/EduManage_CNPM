@model eduManage.Models.TblUser
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
						<h4 class="card-title float-left mt-2">Sửa tài khoản</h4> <a asp-action="Index" class="btn btn-primary float-right veiwbutton">Trở về</a>
					</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="row formtype">
                        

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UserName">Tên tài khoản</label>
                                <input class="form-control" type="text" asp-for="UserName" >
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PassworkHash">Mật khẩu</label>
                                <input class="form-control" type="text" asp-for="PassworkHash" >
                                <span asp-validation-for="PassworkHash" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FullName">Họ & tên</label>
                                <input class="form-control" type="text" asp-for="FullName" >
                                <span asp-validation-for="FullName  " class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input class="form-control" type="text" asp-for="Email" >
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Phone">Số điện thoại</label>
                                <input class="form-control" type="text" asp-for="Phone" >
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Address">Địa chỉ</label>
                                <input class="form-control" type="text" asp-for="Address" >
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="RoleId">Vai trò</label>
                                <select class="form-control" asp-for="RoleId" asp-items="ViewBag.RoleList">
                                   <option value="">-- Select Role --</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary ">Lưu </button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        
    </div>
</div>
