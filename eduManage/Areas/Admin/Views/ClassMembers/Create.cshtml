@model eduManage.ViewModels.ClassMemberVM

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">Thêm thành viên lớp học</h4>
                        <a asp-action="Index" asp-controller="ClassMembers" asp-route-id="@ViewBag.ClassId" class="btn btn-primary float-right veiwbutton">Trở về</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="ClassId" />

                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UserId">Học viên</label>
                                <select class="form-control" asp-for="UserId" asp-items="ViewBag.StudentList">
                                    <option value="">-- Chọn học viên --</option>
                                </select>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Lớp học</label>
                                <input class="form-control" type="text" value="@ViewBag.ClassName" readonly />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="JoinDate">Ngày tham gia</label>
                                <input class="form-control" type="date" asp-for="JoinDate" />
                                <span asp-validation-for="JoinDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Status">Trạng thái</label>
                                <select class="form-control" asp-for="Status">
                                    <option value="Enrolled">Đang học</option>
                                    <option value="Completed">Hoàn thành</option>
                                    <option value="Dropped">Đã rút</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Progress">Tiến độ (%)</label>
                                <input class="form-control" type="number" asp-for="Progress" min="0" max="100" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FinalScore">Điểm cuối khóa</label>
                                <input class="form-control" type="number" step="0.1" asp-for="FinalScore" />
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Note">Ghi chú</label>
                                <textarea class="form-control" rows="3" asp-for="Note"></textarea>
                            </div>
                        </div>

                        <div class="col-md-12 mt-3">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
